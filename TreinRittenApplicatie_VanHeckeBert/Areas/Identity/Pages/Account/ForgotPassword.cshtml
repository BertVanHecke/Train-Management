@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 text-black d-flex align-items-center justify-content-center w-100">

            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                <form method="post" style="width: 23rem;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Forgot your password?</h3>

                    <div class="form-outline mb-4">
                        <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="pt-1 mb-4">
                        <button type="submit" class="btn btn-info btn-lg btn-block">Reset Password</button>
                    </div>

                </form>
            </div>
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="https://cdn.happyrail.com/uploads/homepage_backgrounds/mountains.jpg"
                 alt="Login image" class="w-100" style="object-fit: cover; object-position: right; height: calc(100vh - 140px)">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
