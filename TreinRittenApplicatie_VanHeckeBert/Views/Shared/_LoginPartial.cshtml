@using Microsoft.AspNetCore.Identity
@using TreinRittenApplicatie_VanHeckeBert.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Booking" asp-action="Index"><i class="bi bi-ticket-perforated"></i></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="ShoppingCart" asp-action="Index"><i class="bi bi-bag-fill"></i></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-person-square"></i></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link  text-white"><i class="bi bi-box-arrow-right"></i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link  text-white" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus-fill"></i></a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-white" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i></a>
        </li>
    }
</ul>
